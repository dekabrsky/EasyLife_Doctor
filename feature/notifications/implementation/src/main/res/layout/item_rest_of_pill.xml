<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/offset_small"
        android:layout_marginHorizontal="@dimen/offset_medium"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/pillName"
            style="@style/TextView.Subtitle1.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Ламивудин" />

        <include
            android:id="@+id/restCount"
            layout="@layout/item_key_value" />

        <include
            android:id="@+id/inDayCount"
            layout="@layout/item_key_value" />

        <include
            android:id="@+id/date"
            layout="@layout/item_key_value" />

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground"
        android:padding="@dimen/offset_small"
        android:src="@drawable/ic_edit" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground"
        android:padding="@dimen/offset_small"
        android:src="@drawable/ic_delete" />

</LinearLayout>